<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AudioSenderFragment">

    <com.jamitlabs.alexaconnect.libraries.recorderview.RecorderView
        android:id="@+id/microphone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_mic_none_black_56dp"
        android:contentDescription="@string/microphone"
        app:layout_constraintBottom_toTopOf="@+id/microphone_status_tv"/>

    <TextView
        android:textAlignment="center"
        android:id="@+id/microphone_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press and hold the microphone button to record audio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/microphone"/>

</android.support.constraint.ConstraintLayout>